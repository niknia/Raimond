{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", 
    "lib": ["ES2020", "DOM"],
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "declaration": true,
    "types": ["node", "react", "react-dom"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
